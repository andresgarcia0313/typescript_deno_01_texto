{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Depurar src/main.ts",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-net",
        "--import-map",
        "./import_map.json"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Deno: Ejecutar src/main.ts sin depurar",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--allow-net",
        "--import-map",
        "./import_map.json"
      ],
      "outputCapture": "std"
    }
  ]
}
